<Window x:Class="WifViewer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WifViewer"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <DockPanel>
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal">
            <Slider Value="{Binding CurrentImageIndex.Value}" Minimum="0" Maximum="{Binding MaximumImageIndex.Value}" TickFrequency="1" Margin="10" Width="150" />
            <TextBlock VerticalAlignment="Center">
                <TextBlock.Text>
                    <MultiBinding StringFormat="{}Frame {0} of {1}">
                        <Binding Path="CurrentImageIndex.Value" />
                        <Binding Path="MaximumImageIndex.Value" />
                    </MultiBinding>
                </TextBlock.Text>
            </TextBlock>
        </StackPanel>
        <Button DockPanel.Dock="Bottom" Content="Refresh" Click="UI_OnRefresh" Padding="10" Margin="5" />
        <Image Source="{Binding CurrentImage.Value}" />
    </DockPanel>
</Window>
